{
    "name": "Summarizer",
    "description": "A web-page summary provider plugin.",
    "version": "1.0",
    "manifest_version": 3,
    "permissions": [
        "storage",
        "declarativeContent",
        "activeTab",
        "scripting",
        "contextMenus",
        "tabs"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "icons": {
        "16": "./images/logo_16.png",
        "32": "./images/logo_32.png",
        "48": "./images/logo_48.png"
    }
}